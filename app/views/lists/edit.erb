<h2>Edit <%= @list.title %> For <%= @list.book.name %>, <%= @list.book.location %></h2>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>
<form action="/books/<%= @list.book_id %>/lists/<%= @list.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="title">Title: </label>
  <input type="text" class="form-control" name="title" value="<%= @list.title %>" placeholder="title">
  <br>
  <label for="content">Content: </label>
  <br>
  <textarea name="content" class="form-control" value="<%= @list.content %>" rows="20" cols="100"></textarea>
  <br>
  <input type="submit" class="btn btn-default" value="Update List">
  <button type="button" class="btn btn-default" name="cancel"><a href="/books/<%= @list.book_id %>">Cancel</a></button>
</form>
