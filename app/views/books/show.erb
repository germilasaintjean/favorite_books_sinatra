<h2>Book Name: <%= @book.name %></h2>
<h3>Location: <%= @book.location %></h3>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<br>

<button type="button" class="btn btn-default" name="create_list"><a href="/books/<%= @book.id %>/lists/new">Create a New List</a></button>

<ul>
  <% @book.lists.each do |list| %>
    <li><a href="/books/<%= list.book_id %>/lists/<%= list.id %>" style="color: #ffffff"><%= list.title %></a></li>
  <% end %>
</ul>

<form action="/books/<%= @trip.id %>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <button type="button" class="btn btn-default" name="edit_book"><a href="/books/<%= @book.id %>/edit">Edit Book</a></button>
  <input type="submit" class="btn btn-default" value="Delete Book">
</form>
